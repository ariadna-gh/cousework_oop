<Window x:Class="oop_project_coursework.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:oop_project_coursework"
            mc:Ignorable="d"
            Title="Список транспортних засобів і техстан"
            Height="620" Width="1300">

    <!-- Головний ScrollViewer -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Таблиця ТЗ -->
            <DataGrid ItemsSource="{Binding Vehicles}"
                          SelectedItem="{Binding SelectedVehicle}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="False"
                          Grid.Row="0"
                          Margin="0 0 0 15"
                          Height="150"
                          RowDetailsVisibilityMode="Collapsed"
                          MaxWidth="1200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Реєстраційний номер" Binding="{Binding RegistrationNumber}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Марка" Binding="{Binding Make}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding VehicleType}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Власник" Binding="{Binding Owner.FullName}" Width="200" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Header="Потребує ремонту" Binding="{Binding NeedsRepair, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="Auto" IsReadOnly="False" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Форма додавання / редагування -->
            <GroupBox Header="Дані транспортного засобу" Grid.Row="1" Margin="0 0 0 15">
                <StackPanel Margin="10">

                    <!-- Блок додавання авто -->
                    <TextBlock Text="Додавання нового транспорту" 
                       FontWeight="Bold" Margin="0 0 0 5"/>

                    <StackPanel Orientation="Horizontal">

                        <StackPanel Margin="5">
                            <TextBlock Text="Реєстраційний номер"/>
                            <TextBox Width="150" 
                             Text="{Binding NewVehicle.RegistrationNumber, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Марка"/>
                            <TextBox Width="150" Text="{Binding NewVehicle.Make}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Модель"/>
                            <TextBox Width="150" Text="{Binding NewVehicle.Model}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Тип"/>
                            <ComboBox Width="140"
                              SelectedValue="{Binding NewVehicle.VehicleType, Mode=TwoWay}"
                              SelectedValuePath="Content">
                                <ComboBoxItem Content="Car"/>
                                <ComboBoxItem Content="Truck"/>
                                <ComboBoxItem Content="Motorcycle"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Власник"/>
                            <ComboBox Width="200"
                              ItemsSource="{Binding Owners}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="OwnerId"
                              SelectedValue="{Binding NewVehicle.OwnerId, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="5" VerticalAlignment="Bottom" Orientation="Horizontal">
                            <Button Content="Додати" Width="90" Margin="4" Click="AddVehicle_Click"/>
                        </StackPanel>

                    </StackPanel>

                    <Separator Margin="5"/>

                    <!-- Блок редагування авто -->
                    <TextBlock Text="Редагування обраного транспорту" 
                       FontWeight="Bold" Margin="0 5 0 5"/>

                    <StackPanel Orientation="Horizontal">

                        <StackPanel Margin="5">
                            <TextBlock Text="Реєстраційний номер"/>
                            <TextBox Width="150"
                             Text="{Binding SelectedVehicle.RegistrationNumber, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Марка"/>
                            <TextBox Width="150"
                             Text="{Binding SelectedVehicle.Make, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Модель"/>
                            <TextBox Width="150"
                             Text="{Binding SelectedVehicle.Model, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Тип"/>
                            <ComboBox Width="140"
                              SelectedValue="{Binding SelectedVehicle.VehicleType, Mode=TwoWay}"
                              SelectedValuePath="Content">
                                <ComboBoxItem Content="Car"/>
                                <ComboBoxItem Content="Truck"/>
                                <ComboBoxItem Content="Motorcycle"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="Власник"/>
                            <ComboBox Width="200"
                              ItemsSource="{Binding Owners}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="OwnerId"
                              SelectedValue="{Binding SelectedVehicle.OwnerId, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="5" VerticalAlignment="Bottom" Orientation="Horizontal">
                            <Button Content="Оновити" Width="90" Margin="4" Click="UpdateVehicle_Click"/>
                            <Button Content="Видалити" Width="90" Margin="4" Click="DeleteVehicle_Click"/>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </GroupBox>

            <!-- Нижній блок -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Власники -->
                <GroupBox Header="Власники" Grid.Column="0" Margin="0,0,20,0">
                    <StackPanel Margin="10">
                        <!-- ФІО + кнопки -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                            <TextBlock Text="ФІО:" VerticalAlignment="Center" Width="50"/>
                            <TextBox Width="200" Text="{Binding NewOwner.FullName, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>

                            <Button Content="Додати власника"
                                    Width="110"
                                    Margin="10,0,0,0"
                                Click="AddOwner_Click"/>

                            <Button Content="Видалити власника"
                                    Width="120"
                                    Margin="10,0,0,0"
                                    Click="DeleteOwner_Click"/>
                        </StackPanel>
                        <!-- Рядок для телефону -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <TextBlock Text="Телефон:" VerticalAlignment="Center" Width="50"/>
                            <TextBox Width="200" Text="{Binding NewOwner.Phone, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                        </StackPanel>

                        <!-- Таблиця власників -->
                        <DataGrid x:Name="OwnersDataGrid"
                                      ItemsSource="{Binding Owners}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False"
                                      CanUserResizeColumns="False"
                                      IsReadOnly="True"
                                      Height="90"
                                      Margin="0,10,0,0"
                                      SelectionChanged="OwnersDataGrid_SelectionChanged"
                                      RowDetailsVisibilityMode="Collapsed"
                                      MaxWidth="540">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <!-- ТО / Ремонт -->
                <GroupBox Header="ТО / Ремонт" Grid.Column="1">
                    <StackPanel Margin="10">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Оберіть авто:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="250"
                                              ItemsSource="{Binding Vehicles}"
                                              DisplayMemberPath="RegistrationNumber"
                                              SelectedValuePath="VehicleId"
                                              SelectedValue="{Binding NewMaintenance.VehicleId}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Дата огляду" />
                                <DatePicker SelectedDate="{Binding NewMaintenance.ServiceDate}" />
                            </StackPanel>

                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="Дата наступного ТО" />
                                <DatePicker SelectedDate="{Binding NewMaintenance.NextDueDate}" />
                            </StackPanel>

                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="Примітки" />
                                <TextBox Width="200" Text="{Binding NewMaintenance.Notes}" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Додати запис ТО" Width="140" Click="AddMaintenance_Click"/>
                            <Button Content="Знайти прострочені" Width="140" Margin="10,0,0,0" Click="FindExpired_Click"/>
                            <Button Content="Статистика за типами" Width="160" Margin="10,0,0,0" Click="ShowStats_Click"/>
                            <Button Content="Експорт авто для ремонту" Width="180" Margin="10,0,0,0" Click="ExportRepair_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="InfoText" Margin="0,12,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>